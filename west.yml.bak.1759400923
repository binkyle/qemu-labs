manifest:
  version: 0.13
  remotes:
    - name: zephyrproject-rtos
      url-base: https://github.com/zephyrproject-rtos
  defaults:
    remote: zephyrproject-rtos
  projects:
    - name: zephyr
      revision: main           # 可改 v3.6.0 等稳定标签
      path: zephyr             # => qemu-labs/zephyr
      import: true             # 其余模块也在 qemu-labs/ 下
  self:
    path: .                    # 关键：manifest 仓库 = topdir 本身
