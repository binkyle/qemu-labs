manifest:
  version: 0.13
  remotes:
    - name: zephyrproject-rtos
      url-base: https://github.com/zephyrproject-rtos
  defaults:
    remote: zephyrproject-rtos
  projects:
    - name: zephyr
      revision: main          # 稳定可改成 v3.6.0 等
      path: zephyr            # <== 会克隆到 qemu-labs/zephyr
      import: true            # <== 其余模块也会放在 qemu-labs/ 下
  self:
    path: .                   # <== 关键：让 topdir 就是 qemu-labs/
